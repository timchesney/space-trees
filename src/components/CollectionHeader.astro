---

const {title, headerImage} = Astro.props


---

<header class="collection" style={`background-image:url(${headerImage})`}>
    <h1>{title}</h1>
</header>

<style lang="scss"> 

    header.collection {
        background-size: cover;
        background-position: 50% 50%;
        width: 100%;
        display: flex;
        height: 50vh;
        justify-content: center;
        align-items: center;
    }

</style>