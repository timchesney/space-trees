---
import Head from '../components/base/Head.astro';
import Nav from '../components/base/Nav.astro';
import Footer from '../components/base/Footer.astro';

const { metaTitle } = Astro.props;
---

<html lang="en">

  <head>
    <slot name="head"> 
        <!-- Default Head content -->
        <Head metaTitle = {metaTitle} />
    </slot>
  </head>

  <body>
    <slot name="nav">
    <!-- Default Nav -->
        <Nav />
    </slot>
    
    <div class="content">
      <slot />
    </div>
    <!-- Content passed without a named slot (e.g. markdown content)-->

    <slot name="footer"> 
        <!-- Default footer -->
        <Footer />
    </slot> 

  </body>

</html>